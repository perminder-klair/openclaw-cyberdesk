# Hardware Sidecar Configuration
# Copy to ../.env (parent directory, shared with Next.js dashboard)

# Server
PORT=5000
DEBUG=false

# Audio / Voice
MOCK_AUDIO=false                  # Force mock mode for audio (useful for development)
WHISPER_URL=                      # Self-hosted Whisper API URL (e.g., https://llama.zeiq.dev/whisper)
ELEVENLABS_API_KEY=               # ElevenLabs API key (STT fallback if no WHISPER_URL)
DASHBOARD_URL=http://localhost:3000  # Next.js dashboard URL for webhooks
SYNC_API_KEY=                     # API key for dashboard webhook auth
AUDIO_DEVICE=                     # Audio device name (blank = auto-detect WM8960)
AUDIO_GAIN=1.0                    # Microphone gain multiplier (increase if mic is quiet)
ENABLE_SPEEX_NOISE_SUPPRESSION=false  # Speex noise suppression for wake word

# Wake Word
WAKE_WORD=hey_jarvis              # Wake word model name (pretrained or custom)
WAKE_WORD_THRESHOLD=0.40          # Detection confidence threshold (0.0 - 1.0)
WAKE_WORD_DEBUG=false             # Log wake word scores above 0.3
DISABLE_WAKE_WORD=false           # Disable wake word detection (manual trigger only)

# Text-to-Speech
PIPER_VOICE=en_US-lessac-medium   # Piper ONNX voice model name (in models/ directory)
